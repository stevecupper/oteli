extends layout

include _includes/sharedHTMLfunctions

block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
          small &nbsp;#{pageHeader.strapline}
    .row
      .col-xs-12.col-sm-8
        .row.list-group
          each hotel in hotels
            .col-xs-12.list-group-item
              h4
                a(href="/hotel")= hotel.name
                small &nbsp;
                  +outputRating(hotel.rating)
                span.badge.pull-right.badge-default= hotel.distance
              p.address= hotel.address
              p
                each facility in hotel.facilities
                  span.label.label-warning= facility
                  | &nbsp;
      .col-xs-12.col-sm-4
        p.lead= sidebar
